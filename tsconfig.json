{
  "compilerOptions": {
    "outDir": "components",
    "rootDir": "src/app/components",
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "lib": [
      "es2015",
      "dom"
    ]
  },
  "include": [
    "src/app/components/**/*"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "types": [
    "node"
  ],
  "exclude": [
    "node_modules"
  ],
  "angularCompilerOptions": {
    "genDir": "aot",
    "skipMetadataEmit": false,
    "annotationsAs": "decorators"
  }
}
